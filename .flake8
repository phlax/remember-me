[flake8]
max-line-length = 100
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv

# Ignore specific errors
ignore =
    # W503: line break before binary operator
    W503,
    # E203: whitespace before ':'
    E203,
    # E501: line too long (handled by black)
    E501

per-file-ignores =
    # F401: imported but unused
    __init__.py: F401
